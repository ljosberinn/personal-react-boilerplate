{
  "name": "next-karma",
  "version": "1.0.0",
  "scripts": {
    "analyze": "set ANALYZE=true&&yarn build",
    "build": "next build",
    "install:clean": "rm -rf node_modules && rm yarn.lock && yarn",
    "dev": "next",
    "lint:code": "eslint src",
    "lint:code:fix": "eslint src --fix && prettier --write src",
    "lint:types": "tsc --noEmit",
    "start": "next start",
    "test": "jest",
    "postinstall": "yarn-deduplicate -l"
  },
  "dependencies": {
    "@chakra-ui/core": "1.0.0-rc.8",
    "@sentry/minimal": "5.27.2",
    "@sentry/node": "5.27.2",
    "@sentry/react": "5.27.2",
    "cookie": "0.4.1",
    "framer-motion": "2.9.4",
    "next": "10.0.0",
    "next-connect": "0.9.1",
    "preact": "10.5.5",
    "preact-render-to-string": "5.1.11",
    "preact-ssr-prepass": "1.1.2",
    "react-icons": "3.11.0",
    "web-vitals": "0.2.4"
  },
  "devDependencies": {
    "@commitlint/cli": "11.0.0",
    "@commitlint/config-conventional": "11.0.0",
    "@next/bundle-analyzer": "10.0.0",
    "@next/env": "10.0.0",
    "@sentry/types": "5.27.2",
    "@sentry/webpack-plugin": "1.13.0",
    "@testing-library/jest-dom": "5.11.5",
    "@testing-library/react": "11.1.1",
    "@testing-library/react-hooks": "3.4.2",
    "@testing-library/user-event": "12.1.10",
    "@types/jest": "26.0.15",
    "@types/jest-axe": "3.5.1",
    "@types/node": "14.14.6",
    "@types/node-fetch": "2.5.7",
    "@types/react": "16.9.55",
    "@types/react-dom": "16.9.9",
    "@types/test-listen": "1.1.0",
    "babel-jest": "26.6.2",
    "eslint": "7.12.1",
    "eslint-config-galex": "2.6.2",
    "html-validate": "3.5.0",
    "husky": "4.3.0",
    "identity-obj-proxy": "3.0.0",
    "jest": "26.6.2",
    "jest-axe": "4.1.0",
    "jest-watch-typeahead": "0.6.1",
    "lint-staged": "10.5.1",
    "msw": "0.21.3",
    "next-compose-plugins": "2.2.0",
    "next-offline": "5.0.2",
    "node-fetch": "2.6.1",
    "prettier": "2.1.2",
    "react": "17.0.1",
    "react-dom": "17.0.1",
    "react-test-renderer": "17.0.1",
    "test-listen": "1.1.0",
    "typescript": "4.0.5",
    "webpack": "5.3.2",
    "whatwg-fetch": "3.4.1",
    "yarn-deduplicate": "3.1.0"
  },
  "resolutions": {
    "webpack": "5.3.2"
  },
  "license": "MIT",
  "author": "Gerrit Alex",
  "hooks": {
    "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
    "pre-commit": "lint-staged"
  },
  "lint-staged": {
    "*.{js,tsx,ts,tsx,css,scss}": [
      "eslint --fix"
    ],
    "src/**/*.{js,jsx,ts,tsx,json,css,scss,md}": "prettier --write"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{js,jsx,ts,tsx}"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/scripts/jest/setupTests.js"
    ],
    "transform": {
      "^.+\\.(js|jsx|ts|tsx)$": "<rootDir>/node_modules/babel-jest",
      "^.+\\.css$": "<rootDir>/scripts/jest/cssTransform.js"
    },
    "transformIgnorePatterns": [
      "/node_modules/",
      "^.+\\.module\\.(css|sass|scss)$"
    ],
    "moduleNameMapper": {
      "^.+\\.module\\.(css|sass|scss)$": "identity-obj-proxy"
    },
    "modulePaths": [
      "<rootDir>"
    ],
    "coverageDirectory": "coverage",
    "watchPlugins": [
      "jest-watch-typeahead/filename",
      "jest-watch-typeahead/testname"
    ],
    "clearMocks": true,
    "restoreMocks": true,
    "resetMocks": true
  }
}
